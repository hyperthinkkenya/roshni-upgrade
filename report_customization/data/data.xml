<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for sale.order -->
        <record id="seq_dispatched_order" model="ir.sequence">
            <field name="name">Dispatched Order</field>
            <field name="code">dispatch.register</field>
            <field name="prefix">DO/</field>
            <field name="padding">4</field>
        </record>

        <record id="action_quote_to_sale" model="ir.actions.server">
          <field name="name">Quotation -> Sale</field>
          <field name="model_id" ref="sale.model_sale_order"/>
          <field name="binding_model_id" ref="sale.model_sale_order"/>
          <field name="state">code</field>
          <field name="code">action = records.quotation_to_sale()</field>
        </record>

        <record id="action_create_invoices" model="ir.actions.server">
          <field name="name">Sale -> Invoices</field>
          <field name="model_id" ref="sale.model_sale_order"/>
          <field name="binding_model_id" ref="sale.model_sale_order"/>
          <field name="state">code</field>
          <field name="code">action = records.create_invoices_for_sale()</field>
        </record>

    </data>
</odoo>
